<!-- views/contact.ejs -->
<%- include('includes/header') %>
<h1 class="animate__animated animate__fadeInUp">Contactez-nous</h1>
<section id="contact-section" class="animate__animated animate__fadeInUp">
    <form id="contact-form" action="/contact" method="POST" class="contact-form">
        <div class="form-group">
            <label for="name">Nom :</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="message">Message :</label>
            <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit" class="animate__animated animate__pulse">Envoyer</button>
    </form>
    <% if (typeof success !== 'undefined' && success) { %>
        <p class="success-message animate__animated animate__fadeInUp">Votre message a été envoyé avec succès!</p>
    <% } %>
</section>
<script>
    // Optionally handle success message
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success')) {
        document.querySelector('.success-message').style.display = 'block';
    }
</script>
<%- include('includes/footer') %>